{% extends 'base.html.twig' %}

{% block body %}
    <h1>Login</h1>

    <form method="POST">
        <input type="hidden" name="csrf_token" value="{{ csrf_token('login') }}">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" name="username" id="username">
            {% if "[username]" in validationErrors|keys %}
                <p class="feedback-error">{{validationErrors['[username]'] }}</p>
            {% endif %}
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password">
            {% if "[password]" in validationErrors|keys %}
                <p class="feedback-error">{{validationErrors['[password]'] }}</p>
            {% endif %}
        </div>
        <button type="submit" name="login">Submit</button>
    </form>
{% endblock %}

